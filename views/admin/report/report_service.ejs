<script>
  $(document).ready(() => {
    // var table = $('#datatable-buttons').DataTable();
    // new $.fn.dataTable.Buttons( table, {
    // buttons: [
    //     'copy', 'excel', 'pdf'
    // ]
    // } );
    $.ajax({
      url: 'getlisthotel',
      method: 'GET'
    }).done((datas)=> {
      datas.forEach(element => {
        $op = '<option value="'+ element.id +'">'+ element.name +'</option>'
        $('#select-hotel').append($op);
      });
    })

    for(let i = 1; i <= 12; i++) {
      $op = '<option value="'+ i +'">Tháng '+ i +'</option>'
      $('#select-month').append($op);
    }
    
    $.ajax({
      url:'getlistservice',
      method:'GET'
    }).done((datas)=> {
      $op = '<option value="0">-- Tất cả --</option>'
      $('#select-service').append($op); 
      datas.forEach(element => {
        $op = '<option value="'+ element.id +'">'+ element.name +'</option>'
        $('#select-service').append($op);
      });
      
    })

    $('#view').click(()=> {
      $hotel = $('#select-hotel').val();
      $month = $('#select-month').val();
      $service = $('#select-service').val();
      let month = $month;
      if($service == 0) {

        $.ajax({
          url: 'service-all',
          method: 'POST',
          data : {hotel : $hotel , month : $month, service : $service}
        }).done((datas)=>{
          $('#tbody').html(null);
          datas.forEach(el => {
            
            $row = 
            `<tr role="row" class="odd">
              <td tabindex="" class="sorting_1">${el.service_id}</td>
              <td>${el.name}</td>
              <td style="">${$month}</td>
              <td style="">${el.booking_money}</td>
              <td style="display: none;" class="hidden disabled"></td>
              <td style="display: none;" class="hidden disabled"></td>
            </tr>`
            console.log($row);
            $('#tbody').html($('#tbody').html() + $row)
          });

          
        })

      } else {
        $.ajax({
          url: 'service-one',
          method: 'POST',
          data : {hotel : $hotel , month : $month, service : $service}
        }).done((datas)=>{
          $('#tbody').html(null);
          datas.forEach(el => {
            $row = 
            `<tr role="row" class="odd">
              <td tabindex="" class="sorting_1">${el.service_id}</td>
              <td>${el.name}</td>
              <td style="">${$month}</td>
              <td style="">${el.booking_money}</td>
              <td style="display: none;" class="hidden disabled"></td>
              <td style="display: none;" class="hidden disabled"></td>
            </tr>`
            console.log($row);
            $('#tbody').append($row);
          });

          
        })
      }

    });

  })
</script>
