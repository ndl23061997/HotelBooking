<%- include('../begin_html') %>
<!-- page content -->
<div class="right_col" role="main" style="min-height: 3773px;">
  <div class="page-content">
      <div class="page-title">
          <div class="title_left"><h3>Quản lí tài khoản</h3></div>
    
          <div class="title_right">
            <div
              class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search"
            >
              <div class="input-group">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Tìm kiếm ..."
                />
                <span class="input-group-btn">
                  <button class="btn btn-default" type="button">Go!</button>
                </span>
              </div>
            </div>
          </div>
        </div>
    <div class="clearfix"></div>

    <%- include('../alert_message') %>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Danh sách tài khoản</h2>
            <ul class="nav navbar-right panel_toolbox">
              <a href="/admin/account/add" type="button" class="btn btn-info">Thêm mới</a>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div
              id="datatable_wrapper"
              class="dataTables_wrapper form-inline dt-bootstrap no-footer"
            >
              <div class="row"></div>
              <div class="row">
                <div class="col-sm-12">
                  <table
                    id="datatable"
                    class="table table-striped table-bordered dataTable no-footer"
                    role="grid"
                    aria-describedby="datatable_info"
                  >
                    <thead>
                      <tr role="row">
                        <th
                          class="sorting_asc"
                          tabindex="0"
                          aria-controls="datatable"
                          rowspan="1"
                          colspan="1"
                          aria-sort="ascending"
                          aria-label="Name: activate to sort column descending"
                          style="width: 157px;"
                        >
                          ID
                        </th>
                        <th
                          class="sorting"
                          tabindex="0"
                          aria-controls="datatable"
                          rowspan="1"
                          colspan="1"
                          aria-label="Position: activate to sort column ascending"
                          style="width: 260px;"
                        >
                          Tên tài khoản
                        </th>
                        <th class="sorting" tabindex="0"
                          aria-controls="datatable"
                          rowspan="1"
                          colspan="1"
                          aria-label="Office: activate to sort column ascending"
                          style="width: 118px;"
                        >
                          Loại tài khoản
                        </th>

                        <th class="sorting" tabindex="0"
                          aria-controls="datatable"
                          rowspan="1"
                          colspan="1"
                          aria-label="Office: activate to sort column ascending"
                          style="width: 118px;"
                        >
                          Thao tác
                        </th>
                      </tr>
                    </thead>

                    <tbody>
                      <% data.forEach( element => { %>
                      <tr role="row" class="odd" id="row-id-<%= element.id %>">
                        <td class="sorting_1"><%= element.id %></td>
                        <td><%= element.username %></td>
                        <td>
                            <% 
                              var type = "" 
                              if(element.type == 0) type = "admin";
                              if(element.type == 1) type = "employee";
                              if(element.type == 2) type = "user";
                            %>
                            <%= type %>
                        </td>
                        <td style="width: fit-content">
                          <a href="/admin/account/edit?id=<%= element.id %>&type=<%= element.type %>" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i> Sửa </a>
                          <a onclick="_delete('<%= element.id  %>', '<%= element.type  %>')" type="button" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                        </td>
                      </tr>
                      <% }); %>

                      <script>
                        function _delete(id, type) {
                          if(confirm("Bạn có chắc chắn muốn xóa tài khoản này không?")) {
                            $.ajax({ 
                              url : '/admin/account/delete', 
                              method : 'POST', 
                              data : {'id' : id , type : type},
                              success: function (result) {
                                if(result.error) {
                                  sm('danger', result.error);
                                  return;
                                }
                                sm('success',result.message);
                                $("#row-id-"+id).remove();
                              }
                            })
                          }
                          return;
                        }
                      </script>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->
<%- include('../end_html') %>

