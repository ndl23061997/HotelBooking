                </div>
                <div class="x_content">
                  
                  <%- include('add_user') %>
                  <%- include('add_admin') %>
                  <!-- Form thêm Nhân viên -->

                  
                </div>
              </div>
            </div>
            <script>
              $(document).ready(() => {

                // Form switch
                $('#form-user').addClass('hidden');
                $('#form-admin').addClass('hidden');
                $('#form-employee').addClass('hidden');
                $('#acctype').change(()=> {
                  $('#form-user').addClass('hidden');

                  switch ($('#acctype').val()) {
                    case '2':
                      $('#form-user').removeClass('hidden');
                      break;
                    case '0':
                      $('#form-admin').removeClass('hidden'); 
                      break;
                    default:
                      break;
                  }
                });

                // Đẩy dữ liệu lên server
              });
            </script>
    </div>
  </div>
