    <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Thêm mới tài khoản</h2>
                  <ul class="nav navbar-left panel_toolbox">
                    <div class=" col-xs-12">
                      <select class="form-control" id="acctype">
                        <option value="-1" selected>Chọn loại tài khoản</option>
                        <option value="0">Tài khoản Admin</option>
                        <option value="1">Tài khoản nhân viên</option>
                        <option value="2">Tài khoản người dùng</option>
                      </select>
                    </div>
                  </ul>
