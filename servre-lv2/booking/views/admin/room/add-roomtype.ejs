<%- include('../nav-bar.ejs') %>
<div id="wrapper">

    <%- include('../side-bar.ejs') %>

    <!-- Content -->
    <div id="content-wrapper">


        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/admin">Trang chính</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="../hotel-list">Khách sạn</a>
                </li>
                <li class="breadcrumb-item active">Thêm loại phòng</li>
            </ol>


            <!-- Alert message -->
            <%- include('../alert-message.ejs') %>

            <form action="/admin/room/add-roomtype" class="bootstrap-form needs-validation" role="form" data-toggle="validator"
                method="post" id="form">

                <div class="form-group">
                    <label>Tên loại phòng</label>
                    <input type="text" class="form-control" name="name" id="name2">
                    <script>
                        bootstrapValidate('#name2', 'required:Không được bỏ trống!')
                    </script>
                </div>

                <!-- Textarea -->
                <div class="form-group">
                    <label for="comment">Mô tả:</label>
                    <textarea class="form-control" name="des" rows="5" id="comment" placeholder="Nhập mô tả"></textarea>
                </div>


                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="save-data" onclick="return _save()">Lưu lại</button>
                    <a href="/admin/room/roomtype-list" class="btn btn-danger" onclick="return _return()">Quay lại</a>
                    <script>
                        function _save() {
                            if (confirm('Bạn chắc chắn muốn lưu thông tin không ?')) {
                                return true;
                            } else {
                                return false;
                            }
                        }

                        function _return() {
                            if (confirm('Bạn muốn quay lại không?')) {
                                return true;
                            } else {
                                return false;
                            }
                        }
                    </script>
                </div>

            </form>
        </div>
        <!-- /.content-wrapper -->
    </div>

</div>
<!-- /#wrapper -->

<%- include('../sticky-footer.ejs') %>